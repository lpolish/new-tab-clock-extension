{
  "manifest_version": 3,
  "name": "New Tab Clock",
  "version": "1.2.0",
  "description": "A sleek clock and date for your new tab page.",
  "action": {
    "default_popup": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ]
    }
  ]
}